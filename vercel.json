
{
  "name": "brillprime-frontend",
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend.render.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://your-backend.render.com",
    "VITE_WEBSOCKET_URL": "wss://your-backend.render.com"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "client/dist/**": {
      "includeFiles": "client/dist/**"
    }
  }
}
