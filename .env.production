
# BrillPrime Production Environment Configuration

# Core Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Security Secrets (YOU MUST CHANGE THESE)
JWT_SECRET=your-production-jwt-secret-32-chars-minimum-change-this
SESSION_SECRET=your-production-session-secret-32-chars-min-change-this
ENCRYPTION_KEY=your-32-character-encryption-key-here-change

# Database (Neon PostgreSQL) - UPDATE WITH YOUR CREDENTIALS
DATABASE_URL=postgresql://username:password@hostname:5432/database
PGHOST=your-postgres-host
PGPORT=5432
PGUSER=your-username
PGPASSWORD=your-secure-password
PGDATABASE=your-database-name

# Redis (Production) - OPTIONAL
REDIS_URL=redis://username:password@hostname:6379
REDIS_DISABLED=false

# CORS & Security
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
WEBSOCKET_URL=wss://yourdomain.replit.app
TRUSTED_PROXIES=replit

# Payment Processing (UPDATE WITH YOUR KEYS)
PAYSTACK_SECRET_KEY=sk_live_your_live_paystack_secret
PAYSTACK_PUBLIC_KEY=pk_live_your_live_paystack_public

# External Services (CONFIGURE AS NEEDED)
SENDGRID_API_KEY=your-sendgrid-production-key
TWILIO_ACCOUNT_SID=your-twilio-production-sid
TWILIO_AUTH_TOKEN=your-twilio-production-token
GOOGLE_MAPS_API_KEY=your-google-maps-production-key

# Google OAuth (CONFIGURE FOR YOUR DOMAIN)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Monitoring
SENTRY_DSN=your-sentry-production-dsn
LOG_LEVEL=warn
METRICS_ENABLED=true

# Mobile Configuration
MOBILE_API_VERSION=v1
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_BIOMETRICS=true
CACHE_TIMEOUT=300000

# Performance Settings
MAX_UPLOAD_SIZE=10mb
SESSION_TIMEOUT=3600000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
