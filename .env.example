
# ===========================================
# BrillPrime API Keys & Configuration Guide
# ===========================================
# Copy this file to .env and fill in your actual API keys

# ===========================================
# CORE APPLICATION SETTINGS (Required)
# ===========================================
NODE_ENV=development
PORT=5000
BASE_URL=https://your-app-name.replit.app
CLIENT_URL=http://localhost:5000

# ===========================================
# SECURITY CONFIGURATION (Required)
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_here_please_change_this_in_production
SESSION_SECRET=your_session_secret_key_min_32_chars_here_please_change_this_in_production

# ===========================================
# DATABASE CONFIGURATION (Required)
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/brillprime
PGHOST=your_postgres_host
PGPORT=5432
PGUSER=your_postgres_username
PGPASSWORD=your_postgres_password
PGDATABASE=brillprime

# ===========================================
# REDIS CONFIGURATION (Required for sessions/cache)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ===========================================
# PAYMENT GATEWAYS (Required for transactions)
# ===========================================

# Paystack (Primary payment gateway for Nigeria)
# Get keys from: https://dashboard.paystack.com/settings/api
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here
PAYSTACK_CALLBACK_URL=https://your-domain.replit.app/api/payments/paystack/callback

# Stripe (Alternative payment gateway)
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# PayPal (Alternative payment gateway)
# Get keys from: https://developer.paypal.com/developer/applications
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# ===========================================
# SOCIAL AUTHENTICATION (Required for login)
# ===========================================

# Google OAuth
# Get keys from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Apple Sign In
# Get keys from: https://developer.apple.com/account/resources/identifiers/
VITE_APPLE_CLIENT_ID=your_apple_app_id_here
APPLE_TEAM_ID=your_apple_team_id_here
APPLE_KEY_ID=your_apple_key_id_here
APPLE_PRIVATE_KEY=your_apple_private_key_here

# Facebook Login
# Get keys from: https://developers.facebook.com/apps/
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# ===========================================
# MAPS & LOCATION SERVICES (Required)
# ===========================================

# Google Maps API
# Get key from: https://console.cloud.google.com/google/maps-apis/
# Enable: Maps JavaScript API, Places API, Geocoding API, Directions API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ===========================================
# EMAIL SERVICES (Required for OTP/notifications)
# ===========================================

# Gmail SMTP (Basic option)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=BrillPrime <noreply@brillprime.com>

# SendGrid (Recommended for production)
# Get key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@brillprime.com

# Mailgun (Alternative)
# Get keys from: https://app.mailgun.com/app/account/security/api_keys
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

# ===========================================
# SMS SERVICES (Required for OTP)
# ===========================================

# Twilio (Recommended)
# Get keys from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Termii (Nigerian SMS provider)
# Get API key from: https://accounts.termii.com/
TERMII_API_KEY=your_termii_api_key_here
TERMII_SENDER_ID=BrillPrime

# ===========================================
# PUSH NOTIFICATIONS (Optional)
# ===========================================

# VAPID Keys for Web Push Notifications
# Generate at: https://vapidkeys.com/
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Firebase Cloud Messaging (Alternative)
# Get keys from: https://console.firebase.google.com/
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_SENDER_ID=your_fcm_sender_id_here

# ===========================================
# FILE STORAGE (Optional but recommended)
# ===========================================

# AWS S3 (Recommended for production)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=brillprime-uploads

# Cloudinary (Alternative for images)
# Get keys from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# ANALYTICS & MONITORING (Optional)
# ===========================================

# Google Analytics
VITE_GA_TRACKING_ID=your_google_analytics_id_here

# Sentry (Error monitoring)
# Get DSN from: https://sentry.io/
SENTRY_DSN=your_sentry_dsn_here

# LogRocket (Session recording)
LOGROCKET_APP_ID=your_logrocket_app_id_here

# ===========================================
# COMPLIANCE & VERIFICATION (Nigerian specific)
# ===========================================

# BVN Verification Service
BVN_API_KEY=your_bvn_verification_api_key
BVN_API_URL=https://api.bvnverification.ng/v1

# NIN Verification Service
NIN_API_KEY=your_nin_verification_api_key
NIN_API_URL=https://api.ninverification.ng/v1

# Prembly (Nigerian KYC/AML service)
# Get keys from: https://prembly.com/
PREMBLY_API_KEY=your_prembly_api_key_here
PREMBLY_APP_ID=your_prembly_app_id_here

# ===========================================
# BANKING & FINANCIAL SERVICES
# ===========================================

# Paystack Transfer Recipients
PAYSTACK_TRANSFER_RECIPIENT_CODE=your_transfer_recipient_code

# Flutterwave (Alternative payment processor)
# Get keys from: https://dashboard.flutterwave.com/
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key

# ===========================================
# LOGISTICS & DELIVERY
# ===========================================

# Nigerian Postal Service API (if available)
NIPOST_API_KEY=your_nipost_api_key

# GIG Logistics API (Nigerian logistics company)
GIG_API_KEY=your_gig_logistics_api_key

