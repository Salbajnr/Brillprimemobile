NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Security Secrets
JWT_SECRET=dev-jwt-secret-key-change-in-production
SESSION_SECRET=dev-session-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://replit:password@localhost:5432/brillprime_development

# Redis Configuration (optional for development)
REDIS_URL=redis://localhost:6379
REDIS_DISABLED=true

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_VERIFICATION=false
ENABLE_EMAIL_VERIFICATION=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
PAYMENT_RATE_LIMIT_MAX=10

# App Configuration
APP_NAME=Brill Prime
LOG_LEVEL=info
METRICS_ENABLED=true

# Payment Configuration (optional for development)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key

# Email Configuration (optional for development)
# SENDGRID_API_KEY=
EMAIL_SERVICE_API_KEY=your_email_service_api_key
# SENDGRID_FROM_EMAIL=

# SMS Configuration (optional for development)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# Security settings
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_TIME=30