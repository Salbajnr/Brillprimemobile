
# Core Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Security Secrets
JWT_SECRET=brillprime-jwt-secret-development-key-32-chars-minimum
SESSION_SECRET=brillprime-session-secret-development-key-32-chars-minimum

# Database Configuration
DATABASE_URL=postgresql://brillprime_user:brillprime_pass@localhost:5432/brillprime_db

# Redis Configuration (Disabled for development)
REDIS_DISABLED=true

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_VERIFICATION=false
ENABLE_EMAIL_VERIFICATION=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
PAYMENT_RATE_LIMIT_MAX=10

# App Configuration
APP_NAME=Brill Prime
LOG_LEVEL=info
METRICS_ENABLED=true

# Payment Configuration (Optional for development)
# PAYSTACK_SECRET_KEY=
# PAYSTACK_PUBLIC_KEY=

# Email Configuration (Optional for development)
# SENDGRID_API_KEY=
# SENDGRID_FROM_EMAIL=

# SMS Configuration (Optional for development)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=
