modules = ["nodejs-20"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
integrations = ["javascript_database==1.0.0"]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Development Server"
author = 46793445
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Production Server"
author = 46793445
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start"

[[workflows.workflow]]
name = "Build and Start"
author = 46793445
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start:prod"

[[workflows.workflow]]
name = "Test API"
author = 46793445
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test-api"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run validate"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow]]
name = "Backend Server"
