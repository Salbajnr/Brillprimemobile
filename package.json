{
  "name": "brillprime-monorepo",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/native",
    "apps/admin",
    "packages/shared",
    "packages/server"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:native": "npm run start --workspace=apps/native",
    "dev:server": "npm run dev --workspace=packages/server",
    "build": "npm run build --workspace=apps/web",
    "build:web": "npm run build --workspace=apps/web",
    "build:native": "npm run build:android --workspace=apps/native",
    "start": "npm run start --workspace=packages/server",
    "test": "npm run test --workspaces",
    "test:e2e": "npm run test:e2e --workspace=apps/web",
    "check": "tsc --build",
    "clean": "npm run clean --workspaces",
    "db:push": "npm run db:push --workspace=packages/server"
  },
  "devDependencies": {
    "typescript": "5.6.3",
    "@types/node": "^22.17.0",
    "tsx": "^4.20.3",
    "jest": "^30.0.4",
    "@types/jest": "^30.0.0"
  }
}