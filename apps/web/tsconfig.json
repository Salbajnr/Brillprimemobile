{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@packages/*": ["../../packages/*"],
      "@shared/*": ["../../packages/shared/src/*"],
      "@shared-ui/*": ["../../packages/shared-ui/src/*"],
      "@business-logic/*": ["../../packages/business-logic/src/*"],
      "@api-client/*": ["../../packages/api-client/src/*"],
      "@constants/*": ["../../packages/constants/src/*"],
      "@packages/shared": ["../../packages/shared/src"],
      "@packages/shared-ui": ["../../packages/shared-ui/src"],
      "@packages/business-logic": ["../../packages/business-logic/src"],
      "@packages/api-client": ["../../packages/api-client/src"],
      "@packages/constants": ["../../packages/constants/src"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
